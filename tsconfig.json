{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src", "./node_modules/@types"]
  },
  "include": ["src/**/*", "dev-scripts/build_db.ts", "dev-scripts/database.ts"],
  "exclude": ["node_modules", "dist"]
}
